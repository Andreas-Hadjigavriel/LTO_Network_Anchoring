<!-- Toggle Elements-->
<script> 
	anchorToggleElements = function() {
		document.getElementById('anchorContainer').style.display = 'unset';
		document.getElementById('pNodeContainer').style.display  = 'none';
		document.getElementById('wfNodeContainer').style.display = 'none';
	}
	pnToggleElements = function() {
		document.getElementById('anchorContainer').style.display = 'none';
		document.getElementById('pNodeContainer').style.display  = 'unset';
		document.getElementById('wfNodeContainer').style.display = 'none';
	}
	wfToggleElements = function() {
		document.getElementById('anchorContainer').style.display = 'none';
		document.getElementById('pNodeContainer').style.display  = 'none';
		document.getElementById('wfNodeContainer').style.display = 'unset';
	}
</script>

<script>
	// Show FileName on Upload
	updateList = function() {
		var input = document.getElementById('file');
		var output = document.getElementById('fileList');
		var children = "";
		for (var i = 0; i < input.files.length; ++i) {
			children += input.files.item(i).name;
		}
		output.innerHTML = children;
	}

	// check if upload file before submitions
	check = function() {
		const input = document.getElementById('fileList').innerHTML
		if (!input) {
			alert("You need to upload at least one file in order to anchor")
		}
	}
</script>

